#include<sys/types.h>
#include<sys/stat.h>
#include<sys/fcntl.h>
#include<stdio.h>
#include<unistd.h>
#include<signal.h>
#include<string.h>


int main(){
	remove("tube");
	char note[100];
	int p=mknod("tube",S_IFIFO|0666,0);
	if(p==-1){printf("erreur ouveture tube\n");return 0;}

	p=open("tube",O_WRONLY);
	if(p==-1){printf("erreur ouveture tube\n");return 0;}

	for(;;){
		printf("Saisir une note\n");
		scanf("%s",note);
		write(p,note,strlen(note));
		printf("\nEcriture dans le pipe termin√©\n");
		if(note[0]=='-'){break;}
	}
	
	printf("\nfin du programme");
	return 0;
}
