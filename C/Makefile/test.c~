#include <stdio.h>
#include <stdlib.h>
#include "fonction.h"
int main(){
	test1("b");
	test1("m");
	printf("\n------------------\n-----------------------\n");
	test2("b",2);
	test2("m",3);
	return 0;
}
void test1(char* c){
		if(c=="b") printf("Bonjour ");
		else if(c=="m") printf("Merci ");
		else if(c=="a") printf("au revoir ");
		else printf("Mot inconnu ");	
}
void test2(char* c, int i){
	int j;
	for(j=0;j<i;j++){
		if(c=="b") printf("Bonjour ");
		else if(c=="m") printf("Merci ");
		else if(c=="a") printf("au revoir ");
		else printf("Mot inconnu ");		
	}	
}
